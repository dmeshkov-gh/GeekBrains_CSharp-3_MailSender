<Window x:Class="WPFTestMailSender.SendEndWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTestMailSender"
        mc:Ignorable="d"
        Title="SendEndWindow" Height="175" Width="400" WindowStyle="None"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label Name="ISendEnd" Content="Работа завершена"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Width="Auto" Height="Auto"
                   FontSize="25"/>
            <Button x:Name="btnOK" Content="Ok"
                    Margin="50,20" Width="50" Click="btnOK_Click"/>
        </StackPanel>
    </Grid>
</Window>
